<%-include("header.ejs")-%>
  <body>
    <div class="box" id="heading">
        <h1><%=title %></h1>
    </div>

<div class="box">

<% newElement.forEach(function(item){ %>
  <form action="/deleteItem" method="post">


  <div class="item">
    <input type="checkbox" name="deleteItem" value="<%=  item.id  %>" onchange="submit();">
    <p><%=  item.name  %></p>

  </div>
  <input type="hidden" name="listName" value="<%=title%>">
  </form>
  <% }) %>





  <form action="/" class="item" method="post">
    <input type="text" name="newElement" placeholder="New item" autocomplete="off">
    <button type="submit" name="list" value="<%=title %>">+</button>
  </form>
</div>
<%-include("footer.ejs")-%>
